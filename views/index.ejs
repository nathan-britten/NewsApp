<%- include("partials/header") %>


<div class="home">

  <div class="container ">
    <div class="row mx-auto my-5">
      <div class=" mx-auto col-md-12">
        <h2 class="text-center">Search Popular News</h2>



      
    
    
        <form class="mx-auto w-50 mt-5 text-center popularSearch w-100">

          <input class="form-control searchTerm" type="search" placeholder="Search" aria-label="Enter a search phrase" 
          <% if(popularSearches[0] === undefined){} else { %>
          value="<%= popularSearches[0].popularSearch %>">
          <%  } %>
        <p class="d-inline" >
          <a class="btn btn-info mt-4 options" data-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">Options</a>
    
        </p>
  
        <div class="collapse multi-collapse " id="multiCollapseExample1">
          <div class="filters mt-4">
            <label class="px-2 dateminLabel"for="datemin">From:</label>
            <input type="date" id="datemin" name="datemin" min="2019-01-01" max="<%= filterDate.year %>-<%= filterDate.month %>-<%= filterDate.date %>"><br>
          </div>
          <div class="filters mt-4">
            <label class="px-3" for="datemax">To:</label>
            <input type="date" id="datemax" name="datemax" min="2020-01-01" max="<%= filterDate.year %>-<%= filterDate.month %>-<%= filterDate.date %>">
          </div>


          <div class="languageSelect mt-4">
            <label class="px-3" >Language</label>
            <select id="language" name="languages">
              <option value="ar">Arabic</option>
              <option value="de">German</option>
              <option value="en" selected>English</option>
              <option value="es">Spanish</option>
              <option value="fr">French</option>
              <option value="he">Hebrew</option>
              <option value="it">Italian</option>
              <option value="nl">Dutch</option>
              <option value="pt">Portuguese</option>
              <option value="ru">Russian</option>
            </select>

          </div>


        </div>
          


        <button class="btn btn-outline-success mt-4 searchAPI " type="">Search</button>
        </form>

       

      </div>
    </div>
  </div>
  
  <div class="container ">
    <div class="row output my-4 ">
  
    </div>
  </div>

</div>

<% articleTitleArray.forEach(function(title){ %>


  <p class="articleTitleArray"><%= title  %></p>

  
<% }) %>

<p class="articleAmount"><%= amountOfArticles %></p>

<% if(active){ %>

  <p class="mini">Username: <span class="active"><%= active %></span></h1>
<% } else {} %>





<%- include("partials/footer") %>